pkgname='modular'
arch=('x86_64')
pkgdesc='modular installer'
pkgrel=1
pkgver=0.1.4
url='https://get.modular.com'
_rpmname="modular-${pkgver}-${arch}.rpm"
source=("https://dl.modular.com/public/installer/rpm/any-distro/any-version/${arch}/modular-${pkgver}-${arch}.rpm")
sha256sums=('80d65bdecd9f7f5348e790e652cb46a015a61ae68598601f212c2f9ddb511554')
_projectname="$pkgname"

package() {
    cp -r "${srcdir}/usr" "${pkgdir}/"
    cp -r "${srcdir}/etc" "${pkgdir}/"
}
