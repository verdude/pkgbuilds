pkgname=tcli
arch=('x86_64')
pkgdesc='tcli'
pkgrel=1
pkgver=0.1.1
url='https://git.sr.ht/~erra/tcli'
source=("git+${url}")
sha256sums=('SKIP')
makedepends=('git' 'go')
_projectname="tcli"

build() {
    cd "${srcdir}/${pkgname}"
    make PROJECT=$_projectname CONF_PREFIX=/etc/$_projectname LOG_PREFIX=/tmp CONFIGFILE=config.toml
}

pkgver() {
    cd "${srcdir}/${pkgname}"
    git describe --tags --abbrev=0
}

check() {
    cd "${srcdir}/${pkgname}"
    make test
}

package() {
    cd "${srcdir}/${pkgname}"
    make DESTDIR=/${pkgdir} install
}
