pkgname=ignore
arch=('x86_64')
pkgdesc='ignore file gen'
pkgrel=1
pkgver=0.1.3
url='https://github.com/verdude/ignore'
source=("git+${url}")
sha256sums=('SKIP')
makedepends=('git' 'go')

build() {
    cd "${srcdir}/${pkgname}"
    make
}

pkgver() {
    cd "${srcdir}/${pkgname}"
    git describe --tags --abbrev=0
}

check() {
    cd "${srcdir}/${pkgname}"
    make test
}

package() {
    cd "${srcdir}/${pkgname}"
    make DESTDIR=/${pkgdir} install
}
